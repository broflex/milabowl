---
import Card from "../../components/core/Card.astro";
import Col from "../../components/core/Grid/Col.astro";
import Typography from "../../components/core/Typography.astro";
import Layout from "../../layouts/Layout.astro";
import { blogEntries } from "./blogEntries";
// import { getCollection } from "astro:content";
// const blogEntries = await getCollection('blog');
---
<Layout title="Mila blog">
    <div class="blog-container"> 
        {        
            blogEntries.map(b => (
                <Col col={12}>
                    <Card title={b.title}>
                        {b.paragraphs.map((p, i) => (
                            <div class="blog-entry">
                                <Typography variant="body1">
                                    {p}
                                </Typography>
                            </div>                        
                        ))}
                    </Card>
                </Col>           
            ))
        }
    </div>
    <!-- {
        blogEntries.map(async post => {
            const { Content } = await post.render();

            return(
                <>
                    <h1>{post.data.title}</h1>
                    <Content/>
                </>
                
            )
        })
    } -->

</Layout>

<style>
    .blog-container {
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }
    .blog-entry:not(:first-child) {
        margin-top: 1rem;
    }

    h1 {
        font-size: 4.5rem;
        font-weight: 800;
    }
</style>